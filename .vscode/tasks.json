{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Attach USB to WSL",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/attachUsb.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                
            ]
        },
        {
            "label": "Detach USB from WSL",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/detachUsb.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                
            ]
        },
        {
            "label": "Dissassemble",
            "type": "shell",
            "command": "ninja -C ${workspaceFolder}/build/CMake/ disassemble-${input:Executable}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "ninja -C ${workspaceFolder}/build/CMake/ flash-${input:Executable}",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "Executable",
            "description": "Select executable",
            "options": [
                "main",
                "assessment_major",
                "assessment_minor",
                "week3",
                "w4p1",
                "w4p2",
                "w4p3",
                "w5p1"
            ],
            "default": "assessment_major"
        }
    ]
}