{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Dissassemble",
            "type": "shell",
            "command": "ninja -C ${workspaceFolder}/build/CMake/ disassemble-${input:Executable}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "ninja -C ${workspaceFolder}/build/CMake/ flash-${input:Executable}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "Executable",
            "description": "Select executable",
            "options": [
                "main",
                "assessment_minor",
                "week3"
            ],
            "default": "assessment_minor"
        }
    ]
}